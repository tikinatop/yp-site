<% include partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome To YelpCamp!</h1>
			<p>View our hand-picked hotels from all over the world!</p>
			<p>
				<a class="btn btn-primary btn-large" href="/hotels/new">Add a new hotel!</a>
			</p>
		</div>
	</header>



	
	<div class="row">
		<div class="col-lg-12">
			<h3>Our most popular sites!</h3>
		</div>
	</div>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% hotels.forEach(function(hotel){ %>
		<div class="col-md-3 col-sm-6">
		<div class="thumbnail">
				<img src="<%= hotel.image %>">
			</div>
			<div class="caption">
			<h4><%= hotel.name %></h4>
			</div>
			<p>
				<a href="/hotels/<%= hotel._id %>" class="btn btn-primary">More Info</a>
			</p>
		</div>
		<% }); %>
	</div>

</div>



<% include partials/footer %>