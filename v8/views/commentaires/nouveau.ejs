<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Add New Comment to <%= hotel.nom %></h1>

        <form action="/hotels/<%= hotel._id %>/commentaires" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="commentaire[text]" placeholder="text">
            </div>
            
            <button class="btn btn-lg btn-primary btn-block" >Submit!</button>
        </form>

        <a href="/hotels">Go Back!</a>
    </div>
</div>

