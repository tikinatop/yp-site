<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Hotello</p>
            <div class="listgroup">
              <li class="list-group-item active"><a href="#presentation">Présentation</a></li>
              <li class="list-group-item"><a href="#info">Informations</a></li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="image-responsive" src="<%= hotel.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">9.00€/nuit</h4>
                    <h4><a href="#"><p><%= hotel.nom %></p></a></h4>
                    <p><%= hotel.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <p>
                        <a class="btn btn-success green" href="/hotels/<%= hotel._id %>/commentaires/nouveau">
                            Ajouter un commentaire</a>
                        </p>
                    </div>
                    <hr>
                    <% hotel.commentaires.forEach(function(commentaire){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= commentaire.author.username %></strong>
                            <span class="pull-right">10 days ago</span> 
                            <p><%= commentaire.text %></p>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>





    <% include ../partials/footer %>


