<% include ../partiels/header %>

<div class="container">
    <div class="row">
        <h1>Modifier <strong><%= hotel.nom %></strong></h1>

        <form action="/hotels/<%= hotel._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="hotel[nom]" value="<%= hotel.nom %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="hotel[image]" value="<%= hotel.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="hotel[description]" value="<%= hotel.description %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="hotel[prix]" step="any" value="<%= hotel.prix %>">
            </div>
            <button class="btn btn-lg btn-primary btn-block" >Modifier</button>
        </form>

        <a href="/hotels">Revenir aux hotels</a>
    </div>
</div>


<% include ../partiels/footer %>
