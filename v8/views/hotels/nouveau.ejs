<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Créer un nouvel hotel</h1>

        <form action="/hotels" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="nom" placeholder="nom">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="ajoutez votre description!">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="prix" step="any" placeholder="0"> €
            </div>
            <button class="btn btn-lg btn-primary btn-block" >Soumettre!</button>
        </form>

        <a href="/hotels">Revenir aux hotels</a>
    </div>
</div>


<% include ../partials/footer %>
