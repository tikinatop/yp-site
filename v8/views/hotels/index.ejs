<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Bienvenue chez Hotêllo!</h1>
            <p>Notre séléction d'hôtels, exclusivement notés par nos clients</p>
            <p>
                <a class="btn btn-primary btn-large" href="/hotels/nouveau">Ajouter un hôtel</a>
            </p>
        </div>
    </header>



    
    <div class="row">
        <div class="col-lg-12">
            <h3>Nos sites les plus populaires!</h3>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% hotels.forEach(function(hotel){ %>
        <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
                <img src="<%= hotel.image %>">
            </div>
            <div class="caption">
            <h4><%= hotel.nom %></h4>
            </div>
            <p>
                <a href="/hotels/<%= hotel._id %>" class="btn btn-primary">Plus d'infos</a>
            </p>
        </div>
        <% }); %>
    </div>

</div>



<% include ../partials/footer %>
