<% include ../partiels/header %>

<div class="container">
<div class="row">
    <div class="col-md-3">
	<p class="lead">Hotello</p>
	<div class="listgroup">
	    <li class="list-group-item active"><a href="#presentation">Présentation</a></li>
	    <li class="list-group-item"><a href="#info">Informations</a></li>
	</div>
    </div>
    <div class="col-md-9">
	<div class="thumbnail">
	    <img class="image-responsive" src="<%= hotel.image %>">
	    <div class="caption-full">
		<h4 class="pull-right"><%= hotel.prix %>€/nuit</h4>
		<h4><a href="#"><p><%= hotel.nom %></p></a></h4>
		<p><%= hotel.description %></p>
		<p>
		    <em>Posté par <%= hotel.auteur.nom %></em>
		</p>
		<% if(utilisateurActuel && hotel.auteur.id.equals(utilisateurActuel._id)){ %>
		<a class="btn btn-xs btn-warning" href="/hotels/<%= hotel._id %>/modifier">Modifier article</a>
		<form class="delete-form" action="/hotels/<%= hotel._id %>?_method=DELETE" method="POST">
		    <button class="btn btn-xs btn-danger">Supprimer</button>
		</form>
		<% } %>
	    </div>
	</div>
	<div class="well">
	    <div class="text-right">
		<p>
		    <a class="btn btn-success green" href="/hotels/<%= hotel._id %>/commentaires/nouveau">
			Ajouter un commentaire</a>
		    </p>
		</div>
		<hr>
		<% hotel.commentaires.forEach(function(commentaire){ %>
		<div class="row">
		    <div class="col-md-12">
			<strong><%= commentaire.auteur.nom %></strong>
			<span class="pull-right">10 days ago</span> 
			<p>
			  <%= commentaire.message %>
			</p>
			<% if(utilisateurActuel && hotel.auteur.id.equals(utilisateurActuel._id)){ %>
			<a class="btn btn-xs btn-warning"
			   href="/hotels/<%= hotel._id %>/commentaires/<%= commentaire._id %>/modifier">Éditer commentaire</a>
			<form class="delete-form"
			      action="/hotels/<%= hotel._id %>/commentaires/<%= commentaire._id %>?_method=DELETE" method="POST">
			    <input type="submit" class="btn btn-xs btn-danger" value="Supprimer" />
			</form>
			<% } %>
		    </div>
		</div>
		<% }) %>
	    </div>
	</div>
    </div>
</div>





<% include ../partiels/footer %>


